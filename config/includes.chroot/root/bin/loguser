#!/bin/sh    
echo -n "user name?: "    
read USER_NAME    
export PARTI=`df | /usr/bin/grep 'live/medium' | awk '{print $1}' | sed 's,1,3,g'`    
echo "first give the password to unlock $PARTI"    
pmount -e $PARTI     
echo "$USER_NAME login info:"    
echo "give a new password to $USER_NAME"    
adduser --home /media/$PARTI/$USER_NAME $USER_NAME    

