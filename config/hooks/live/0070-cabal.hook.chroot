#!/bin/sh
cd /root
cabal update
cabal install pandoc-2.10
cabal install pandoc-citeproc
cabal install pandoc-crossref
chmod a+rx /root/.cabal
chmod -R a+rx /root/.cabal/bin
mv `readlink /root/.cabal/bin/pandoc` /usr/local/bin/
mv `readlink /root/.cabal/bin/pandoc-citeproc` /usr/local/bin/
mv `readlink /root/.cabal/bin/pandoc-crossref` /usr/local/bin/
rm -rf /root/.cabal

