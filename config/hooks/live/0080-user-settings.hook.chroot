#!/bin/bash

#######################################

chmod a+x /root
chmod a+x /root/bin

chsh -s /usr/bin/zsh
echo root:wren | chpasswd

cat /etc/adduser.conf | sed 's,DSHELL=/bin/bash,DSHELL=/bin/zsh,g' > a
mv a /etc/adduser.conf
echo 'EXTRA_GROUPS="bluetooth netdev docker dialout cdrom floppy audio video plugdev users"' >> /etc/adduser.conf
echo 'ADD_EXTRA_GROUPS=1' >> /etc/adduser.conf
apt-file update
echo 2 | update-alternatives --config pinentry

